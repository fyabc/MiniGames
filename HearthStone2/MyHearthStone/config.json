/// The system-level configuration file.
/// Do not edit this file, use user-level configuration file and argument configrations to override options.

{
    // Locale, default is `locale.getdefaultlocale()`.
    "Locale": null,

    // The locale to use when "Locale" does not exists.
    "DefaultLocale": "zh_CN",

    "Frontend": "cocos-single",

    /// User extension
    "EnableUserExtension": true,

    // User extension path list, should be overwrite in user config file.
    "UserExtensionPaths": [],

    "Logging": {
        "Level": "INFO",
        "ScreenLog": false,
        "Width": 80
    },

    "Game": {
        // HearthStone version
        "Version": "12.0.0",

        // Some constants of deck.
        "DeckSize": 30,
        "SameCardMax": [2, 2, 2, 2, 1],

        // Some constants of game.
        "DeckMax": 60,
        "HandMax": 10,
        "PlayMax": 7,
        "SecretMax": 5,
        "ManaMax": 10,

        // If turn number larger than TurnMax, it will be a draw.
        "TurnMax": 89,

        // Start hand card number (offensive, defensive).
        "StartCard": [3, 4]
    },

    "UI": {
        "Cocos": {
            // Window width and height.
            "WindowSize": [1360, 700],

            "Fonts": {
                "Default": {
                    "Name": "Belwe Bd BT",
                    "File": "BelweBdBTBold.ttf"
                },
                "Description": {
                    "Name": "SimHei",
                    "File": "SimHei.ttf"
                }
            },

            // Run animations in the game or not.
            "RunAnimations": true,

            // Animation configurations.
            "Animation": {
                "AttackTime": 0.250,        // Duration (half) of attack animation
                "DrawCardTime": 0.600,      // Duration of draw card animation
                "PlayMinionTime": 0.525,
                "OpponentShowTime": 0.525   // Duration of show what cards does your opponent play
            }
        }
    },

    "AI": {
        // The agent of inn keeper.
        "InnKeeperAgent": "BaseAgent"
    },

    "LAN": {
        // Max capacity of the LAN server.
        "ServerMaxCapacity": 32
    }
}
